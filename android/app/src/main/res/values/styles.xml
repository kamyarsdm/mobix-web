<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme used while the app is launching -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Background shown during launch -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Android 12+ splash: use transparent drawable (NO icon flash) -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_transparent</item>

        <!-- No icon background -->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Normal app theme after splash -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
